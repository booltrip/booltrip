<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.booltrip.booltrip.fragment.SetupFragment" >

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_gravity="center"
       android:background="@color/light_orange"
       android:id="@+id/ConnectionFrame"
       >

       <com.booltrip.booltrip.view.CustomTextView class="com.booltrip.booltrip.view.CustomTextView"
           android:layout_width="match_parent"
           android:layout_height="41dp"
           android:textAppearance="?android:attr/textAppearanceSmall"
           android:text="Kevin"
           android:id="@+id/nomUser"
           android:layout_gravity="left|top"
           android:textColor="@color/white"
           android:textStyle="bold"
           android:gravity="left"
           android:textSize="28dp"
           android:paddingLeft="20dp"
           android:paddingRight="20dp"
           android:layout_alignParentStart="true"
           android:layout_marginTop="30dp" />

       <com.booltrip.booltrip.view.CustomTextView class="com.booltrip.booltrip.view.CustomTextView"
           android:layout_width="match_parent"
           android:layout_height="41dp"
           android:textAppearance="?android:attr/textAppearanceSmall"
           android:text="@string/connection_title"
           android:layout_gravity="left|top"
           android:textColor="@color/white"
           android:textStyle="bold"
           android:gravity="left"
           android:textSize="41dp"
           android:lineSpacingExtra="10dp"
           android:layout_alignParentTop="true"
           android:layout_marginTop="80dp"
           android:layout_alignBottom="@+id/connectButton"
           android:paddingLeft="20dp"
           android:paddingRight="20dp"
           android:layout_alignParentEnd="true" />

       <ImageView
           android:layout_width="120dp"
           android:layout_height="120dp"
           android:background="@drawable/roundedbutton"
           android:layout_gravity="center"
           android:layout_alignParentBottom="true"
           android:layout_centerHorizontal="true"
           android:layout_marginBottom="170dp"
           android:layout_alignParentEnd="false"
           android:layout_alignParentStart="false" />

       <ImageButton
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@null"
           android:id="@+id/connectButton"
           android:src="@drawable/voiture_rouge"
           android:layout_gravity="center"
           android:layout_alignParentBottom="true"
           android:layout_centerHorizontal="true"
           android:layout_marginBottom="202dp" />

       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@null"
           android:src="@drawable/satellite_rouge"
           android:layout_gravity="right|top"
           android:id="@+id/imageView"
           android:layout_marginTop="37dp"
           android:layout_alignParentTop="true"
           android:layout_toEndOf="@+id/connectButton"
           android:layout_marginStart="19dp" />

       <com.booltrip.booltrip.view.CustomTextView class="com.booltrip.booltrip.view.CustomTextView"
           android:layout_width="match_parent"
           android:layout_height="41dp"
           android:textAppearance="?android:attr/textAppearanceSmall"
           android:text="@string/connection_button_title"
           android:layout_gravity="left|top"
           android:textColor="@color/white"
           android:textStyle="bold"
           android:gravity="center"
           android:textSize="28dp"
           android:paddingLeft="20dp"
           android:paddingRight="20dp"
           android:layout_alignParentBottom="true"
           android:layout_marginBottom="100dp" />

   </RelativeLayout>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_gravity="center"
       android:background="@color/light_green"
       android:id="@+id/DisconnectionFrame"
       android:visibility="invisible"
       >

       <com.booltrip.booltrip.view.CustomTextView class="com.booltrip.booltrip.view.CustomTextView"
           android:layout_width="match_parent"
           android:layout_height="41dp"
           android:textAppearance="?android:attr/textAppearanceSmall"
           android:text="Kevin"
           android:id="@+id/nomUser2"
           android:layout_gravity="left|top"
           android:textColor="@color/white"
           android:textStyle="bold"
           android:gravity="left"
           android:textSize="28dp"
           android:paddingLeft="20dp"
           android:paddingRight="20dp"
           android:layout_alignParentStart="true"
           android:layout_marginTop="30dp" />

       <com.booltrip.booltrip.view.CustomTextView class="com.booltrip.booltrip.view.CustomTextView"
           android:layout_width="match_parent"
           android:layout_height="41dp"
           android:textAppearance="?android:attr/textAppearanceSmall"
           android:text="@string/disconnection_title"
           android:layout_gravity="left|top"
           android:textColor="@color/white"
           android:textStyle="bold"
           android:gravity="left"
           android:textSize="41dp"
           android:lineSpacingExtra="10dp"
           android:layout_alignParentTop="true"
           android:layout_marginTop="80dp"
           android:layout_alignBottom="@+id/disconnectButton"
           android:paddingLeft="20dp"
           android:paddingRight="20dp"
           android:layout_alignParentEnd="true" />

       <ImageView
           android:layout_width="120dp"
           android:layout_height="120dp"
           android:background="@drawable/roundedbutton2"
           android:layout_gravity="center"
           android:layout_alignParentBottom="true"
           android:layout_centerHorizontal="true"
           android:layout_marginBottom="170dp"
           android:layout_alignParentEnd="false"
           android:layout_alignParentStart="false" />

       <ImageButton
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@null"
           android:id="@+id/disconnectButton"
           android:src="@drawable/voiture_blanche"
           android:layout_gravity="center"
           android:layout_alignParentBottom="true"
           android:layout_centerHorizontal="true"
           android:layout_marginBottom="202dp" />

       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@null"
           android:src="@drawable/satellite_vert"
           android:layout_gravity="right|top"
           android:layout_marginTop="37dp"
           android:layout_alignParentTop="true"
           android:layout_toEndOf="@+id/disconnectButton"
           android:layout_marginStart="19dp" />

       <com.booltrip.booltrip.view.CustomTextView class="com.booltrip.booltrip.view.CustomTextView"
           android:layout_width="match_parent"
           android:layout_height="41dp"
           android:textAppearance="?android:attr/textAppearanceSmall"
           android:text="@string/disconnection_button_title"
           android:layout_gravity="left|top"
           android:textColor="@color/white"
           android:textStyle="bold"
           android:gravity="center"
           android:textSize="28dp"
           android:paddingLeft="20dp"
           android:paddingRight="20dp"
           android:layout_alignParentBottom="true"
           android:layout_marginBottom="100dp" />




   </RelativeLayout>
</FrameLayout>
