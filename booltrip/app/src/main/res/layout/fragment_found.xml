<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/light_violet">

    <com.booltrip.booltrip.view.CustomTextView class="com.booltrip.booltrip.view.CustomTextView"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/booltrip_title"
        android:layout_gravity="left|top"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="31dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:id="@+id/view2" />
    <com.booltrip.booltrip.view.CustomTextView class="com.booltrip.booltrip.view.CustomTextView"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/no_booltrip_text"
        android:layout_gravity="left|top"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:gravity="center_horizontal"
        android:id="@+id/booltripCounter"
        android:layout_below="@+id/view2"
        android:layout_alignParentStart="true" />
    <ListView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/TrackList"
        android:layout_below="@+id/booltripCounter"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp">
    </ListView>
</RelativeLayout>